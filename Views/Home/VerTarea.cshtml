@{
    ViewData["Title"] = "Ver Tarea";
    var tarea = ViewBag.Tarea as Tarea;
}

<section class="contenedor-ver-tarea">
    <div class="tarjeta-tarea">
        <h2>@tarea.titulo</h2>
        <p class="descripcion">@tarea.descripcion</p>
        <p><strong>📅 Fecha:</strong> @tarea.fecha.ToShortDateString()</p>
        <p><strong>✅ Finalizada:</strong> @(tarea.finalizada ? "Sí" : "No")</p>

        <a href="/Home/Index" class="btn-volver">← Volver</a>
    </div>
</section>
