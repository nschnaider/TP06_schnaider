@{
    ViewData["Title"] = "EditarTarea";
    var tarea = ViewBag.Tarea;
}

<section class="form-wrapper">
    <h2>Editar Tarea</h2>
    <form action="EditarTareaGuardar" method="post" class="edit-form">
        <input type="hidden" name="idTarea" value="@tarea.idTarea" />

        <div class="form-group">
            <label for="titulo">Título</label>
            <input type="text" id="titulo" name="titulo" value="@tarea.titulo" autocomplete="off" required />
        </div>

        <div class="form-group">
            <label for="descripcion">Descripción</label>
            <input type="text" id="descripcion" name="descripcion" value="@tarea.descripcion" autocomplete="off" required />
        </div>

        <div class="form-group">
            <label for="fecha">Fecha</label>
            <input type="date" id="fecha" name="fecha" value="@tarea.fecha.ToString("yyyy-MM-dd")" autocomplete="off" required />
        </div>

        <button type="submit" class="btn">Guardar cambios</button>
    </form>
</section>
